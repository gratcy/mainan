  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Categories
        <small>Categories</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><a href="#">Categories</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Categories</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            {{{ error_msg }}}
            <div class="box-header">
			{{#compare execute true operator="=="}}
		    <h3 class="box-title">
			<a href="{{ __site_url 'categories/categories_add' }}" class="btn btn-default"><i class="fa fa-plus"></i> Add Category</a>
			</h3>
            {{/compare}}
            </div>
              <table id="sTable" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Category</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
				{{#each data}}
                <tr>
                  <td>{{ cname }}</td>
                  <td>{{ cdesc }}</td>
                  <td>{{ __get_status cstatus 1 }}</td>
                  <td>
					<a href="{{ __site_url 'categories/categories_update/' }}{{ cid }}"><i class="fa fa-pencil"></i></a>
					<a href="{{ __site_url 'categories/categories_delete/' }}{{ cid }}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-times"></i></a>
                  </td>
                </tr>
                {{/each}}
                </tbody>
                <tfoot>
                <tr>
                  <th>Category</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
