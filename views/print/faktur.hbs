<html>
<title>Faktur</title>
<style>
html,body{margin:0;padding:0;font-size:12px}
table{font-size:12px;border-collapse:collapse;margin:0;padding:0;}
table th {border:1px solid #000;margin:0;padding:0;}
table td {margin:0;padding:0;}
table > tfoot > tr > td{border-top:1px solid #000;margin:0;padding:0;}
</style>
<script>
//window.print();
</script>
<body>
            <!-- Right side column. Contains tde navbar and content of tde page -->
            <aside class="right-side">                
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-xs-12">
<div class="box box-primary">

                                <!-- form start -->
                                    <div class="box-body">
										<div style="text-align:center;font-weight:bold;font-size:12px">
									VICTORY TOYS
              <br />
									JL. WINAON NO. 2, CIREBON JAWA BARAT
              <br />
									TELP: 0231 203 441
									</div>
              <br />
									<div  style="border-bottom:1px solid #000"></div>
              <br />
									<table border="0" style="border-collapse: collapse;">
                <thead>
				  <tr><td style="font-weight:bold;width:50%;">Date</td><td style="">: {{ __get_date rows.tdate 2 }} </td></tr>
                  <tr><td style="font-weight:bold;">Customer</td><td style="">: {{ rows.cname }}</td></tr>
                  <tr><td style="font-weight:bold;">Order No.</td><td style="">: {{ rows.tno }}</td></tr>
                  <tr><td style="font-weight:bold;">Staff</td><td style="">: {{ rows.unick }}</td></tr>
                </tr>
                </thead>
                </tbody>
              </table>
              <br />

									<div  style="border-bottom:1px solid #000"></div>
				<table border="0" style="border-collapse: collapse;width:100%">
                <thead>
                <tr>
                  <td style="font-weight:bold;">QTY</td>
                  <td style="font-weight:bold;width:30%">Nama</td>
				{{#compare rows.tretail 1 operator="=="}}
                  <td style="font-weight:bold;">/Lusin</td>
				{{/compare}}
                  <td style="font-weight:bold;">Jumlah</td>
                </tr>
                </thead>
				{{#each products }}
                <tr>
                  <td>{{ tqty }} {{ __order_product_type ttype 1 }}</td>
                  <td>{{ pname }}</td>
				{{#compare tretail 1 operator="=="}}
                  <td>Rp. {{ __number_format ppricedozen 0 '' ',' }}</td>
				{{/compare}}
                  <td>Rp. {{ __number_format tprice 0 '' ',' }}</td>
                </tr>
                {{/each}}
                <tfoot>
                <tr>
                  <td style="border: none;font-weight:bold;">Total</td>
                  <td style="border: none;"></td>
				{{#compare rows.tretail 1 operator="=="}}
                  <td style="border: none;"></td>
				{{/compare}}
                  <td style="border: none;font-weight:bold;">Rp. {{ __number_format rows.tammount 0 '' ',' }}</td>
                </tr>
				{{#if rows.tdiscount }}
                <tr>
                  <td style="border: none;font-weight:bold;">Discount</td>
                  <td style="border: none;"></td>
				{{#compare rows.tretail 1 operator="=="}}
                  <td style="border: none;"></td>
				{{/compare}}
                  <td style="border: none;font-weight:bold;">Rp. {{ __number_format rows.tdiscount 0 '' ',' }}</td>
                </tr>
				{{/if}}
                <tr>
                  <td style="font-weight:bold;border-top: 1px solid #000">Grand Total</td>
                  <td style="border-top: 1px solid #000;"></td>
				{{#compare rows.tretail 1 operator="=="}}
                  <td style="border-top: 1px solid #000;"></td>
				{{/compare}}
                  <td style="font-weight:bold;border-top: 1px solid #000">Rp. {{ __number_format rows.ttotal 0 '' ',' }}</td>
               </tr>
                </tfoot>
                </table>
              <br />
              <p style="text-align:left">
				  <i>Pusat grosir mainan terlengkap dan termurah di Cirebon</i>
              </p>
                                        <div class="form-group">
											
                                        </div>
                            </div>
                        </div>
                    </div>

                </section><!-- /.content -->
            </aside><!-- /.right-side -->


</body>
</html>
