<html>
<title>Report Stock Out</title>
<body>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">                
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-xs-12">
<div class="box box-primary">

                                <!-- form start -->
                                    <div class="box-body">
									<h2 style="border-bottom:1px solid #000">Report Stock Out</h2>
									<table border="0" style="border-collapse: collapse;width:35%">
									<tr><td>Date</td><td>: {{ from }} - {{ to }}</td></tr>
									<tr><td>Days</td><td>: {{ datediff }}</td></tr>
									</table>
									<br />
                                        <div class="form-group">
										<table border="0" style="border-collapse: collapse;width:100%">
										<thead>
										<tr style="border:1px solid #000;padding:3px;">
										<th style="border:1px solid #000;padding:3px;width:5%;">No.</th>
										<th style="border:1px solid #000;padding:3px;">Product</th>
										<th style="border:1px solid #000;padding:3px;">Stock Final</th>
										<th style="border:1px solid #000;padding:3px;">Stock Process</th>
										<th style="border:1px solid #000;padding:3px;">Stock Left</th>
										<th style="border:1px solid #000;padding:3px;">Out</th>
										<th style="border:1px solid #000;padding:3px;">Average</th>
										<th style="border:1px solid #000;padding:3px;">Count Down (Days)</th>
										</tr>
										</thead>
										<tbody>
										{{#each data}}
										<tr style="border:1px solid #000;padding:3px;">
										<td style="border:1px solid #000;padding:3px;">{{ no }}</td>
										<td style="border:1px solid #000;padding:3px;">{{ pname }}</td>
										<td style="border:1px solid #000;padding:3px;">{{ istock }}</td>
										<td style="border:1px solid #000;padding:3px;">{{ proccess }}</td>
										<td style="border:1px solid #000;padding:3px;">{{ left }}</td>
										<td style="border:1px solid #000;padding:3px;">{{ totalout }}</td>
										<td style="border:1px solid #000;padding:3px;">{{ avg }}</td>
										<td style="border:1px solid #000;padding:3px;">{{ countdown }}</td>
										</tr>
										{{/each}}
										<tbody>
										</table>
					
                                        </div>
                            </div>
                        </div>
                    </div>

                </section><!-- /.content -->
            </aside><!-- /.right-side -->


</body>
</html>
