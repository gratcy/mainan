  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Item Receiving
        <small>Receiving</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><a href="#">Item Receiving Detail</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Item Receiving {{ data.rdocno }}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            {{{ error_msg }}}
            
              <table class="table table-bordered table-striped">
                <thead>
				  <tr><th>Date</th><th>{{ data.rdate }}</th></tr>
                  <tr><th>Vendor</th><th>{{ data.vname }}</th></tr>
                  <tr><th>Doc No.</th><th>{{ data.rdocno }}</th></tr>
                  <tr><th>Description</th><th>{{ data.rdesc }}></th></tr>
                  <tr><th>Status</th><th><span class="label label-primary">Approved</span></th></tr>
                </tr>
                </thead>
                </tbody>
              </table>
              <p>&nbsp;</p>
              <table class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Category</th>
                  <th>Product</th>
                  <th>Description</th>
                  <th>Price PCS</th>
                  <th>Price Lusin</th>
                  <th>Price Koli</th>
                  <th>QTY</th>
                </tr>
                </thead>
                <tbody>
				{{#each product }}
                <tr>
                  <td>{{ product.cname }}</td>
                  <td>{{ product.pname }}</td>
                  <td>{{ product.pdesc }}</td>
                  <td>{{ __number_format ppricepcs 0 '' ',' }}</td>
                  <td>{{ __number_format ppricedozen 0 '' ',' }}</td>
                  <td>{{ __number_format ppricekoli 0 '' ',' }}</td>
                  <td>{{ product.rqty }}</td>
                </tr>
                {{/each}}
                </tbody>
                <tfoot>
                <tr>
                  <th>Total</th>
                  <th></th>
                  <th></th>
                  <th></th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
                </tfoot>
              </table>
              <div class="box-footer">
                <button type="button" onclick="javascript:history.go(-1);" class="btn btn-default">Back!</button>
              </div>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
