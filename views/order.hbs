  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Sales &amp; Purchase
        <small>Order</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><a href="#">Purchase Order</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Purchase Order</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            {{{ error_msg }}}
            
            <div class="box-header">
			{{#if (__check_permission 'OrderExecute') }}
		    <h3 class="box-title">
			<a href="{{ __site_url 'order/order_add' }}" class="btn btn-default"><i class="fa fa-plus"></i> New Purchase Order</a>
			</h3>
            {{/if}}
            </div>
              <table id="sTable" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th style="width:90px">Order No.</th>
                  <th>Date</th>
                  <th>Customer</th>
                  <th>QTY</th>
                  <th>Ammount</th>
                  <th>Discount</th>
                  <th>Total</th>
                  <th>Created By</th>
                  <th style="width:70px">Action</th>
                </tr>
                </thead>
                <tbody>
				{{#each data}}
                <tr>
                  <td>{{ tno }}</td>
                  <td>{{ __get_date tdate 2 }}</td>
                  <td>{{ cname }}</td>
                  <td>{{ tqty }}</td>
                  <td class="aprice">{{ __number_format tammount 0 '' ',' }}</td>
                  <td class="aprice">{{ __number_format tdiscount 0 '' ',' }}</td>
                  <td class="aprice">{{ __number_format ttotal 0 '' ',' }}</td>
				{{#compare tstatus 3 operator="!="}}
                  <td>{{ __parse_json tcreatedby 'uemail' }}</td>
				{{/compare}}
				{{#compare tstatus 3 operator="=="}}
                  <td>Approved by: {{ __parse_json tapprovedby 'uemail' }}</td>
				{{/compare}}
                  <td style="text-align:center;margin:0 auto;width:50px">
					<a href="{{ __site_url 'order/faktur/' }}{{ tid }}" target="_blank" title="Print Faktur"><i class="fa fa-print"></i></a>
					<a href="{{ __site_url 'order/order_detail/'}}{{ tid }}"><i class="fa fa-check"></i></a>
				{{#compare tstatus 3 operator="!="}}
					{{#if (__check_permission 'OrderExecute') }}
					<a href="{{ __site_url 'order/order_update/'}}{{ tid }}"><i class="fa fa-pencil"></i></a>
					<a href="{{ __site_url 'order/order_delete/'}}{{ tid }}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-times"></i></a>
					{{/if}}
				{{/compare}}
                  </td>
                </tr>
                {{/each}}
                </tbody>
                <tfoot>
                <tr>
                  <th>Order No.</th>
                  <th>Date</th>
                  <th>Customer</th>
                  <th>QTY</th>
                  <th>Ammount</th>
                  <th>Discount</th>
                  <th>Total</th>
                  <th>Created By</th>
                  <th>Action</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
