  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Report Best Seller
        <small> Period {{ from }} s/d {{ to }}</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><a href="#">Report</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Best Seller - Period {{ from }} s/d {{ to }}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            {{{ error_msg }}}
            
            <div class="box-header">
            </div>
              <table id="sTable" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Category</th>
                  <th>Product</th>
                  <th>Description</th>
                  <th>Price PCS</th>
                  <th>Price Lusin</th>
                  <th>Price Koli</th>
                </tr>
                </thead>
                <tbody>
				{{#each data}}
                <tr>
                  <td>{{ cname }}</td>
                  <td>{{ pname }}</td>
                  <td>{{ pdesc }}</td>
                  <td>{{ __number_format ppricepcs 0 '' ',' }}</td>
                  <td>{{ __number_format ppricedozen 0 '' ',' }}</td>
                  <td>{{ __number_format ppricekoli 0 '' ',' }}</td>
                </tr>
                {{/each}}
                </tbody>
                <tfoot>
                <tr>
                  <th>Category</th>
                  <th>Product</th>
                  <th>Description</th>
                  <th>Price PCS</th>
                  <th>Price Lusin</th>
                  <th>Price Koli</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
