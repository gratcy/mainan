  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Purchase Order
        <small>New Purchase Order</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Purchase Order</a></li>
        <li class="active"><a href="#">New Purchase Order</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            {{{ error_msg }}}
            
           <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">New Purchase Order</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" action="{{ __site_url 'order/order_add' }}" method="post">
              <div class="box-body">
                <div class="form-group">
                  <label for="Customer" class="col-sm-2 control-label">Date</label>

                  <div class="col-sm-10">
                    <input type="text" name="waktu" class="form-control" id="DateTimePicker" placeholder="Date Order" value="{{ __get_date '' 2 }}">
                  </div>
                </div>
                <div class="form-group">
                  <label for="Customer" class="col-sm-2 control-label">Customer</label>

                  <div class="col-sm-10">
					<select name="customer" class="form-control" id="Customer">
                    </select>
                    <br />
                    <br />
                <a href="{{ __site_url 'customers/customer_quick_add' }}" id="addCustomer" class="btn btn-default">Add Customer</a>
                  </div>
                </div>
                <div class="form-group hide">
                  <label for="inputPassword3" class="col-sm-2 control-label">Status</label>

                  <div class="col-sm-10">
                    <div class="checkbox">
					  {{{ __get_status 1 2 }}}
                  </div>
                  </div>
                </div>

				<hr />
                <div class="form-group">
                  <label for="Customer" class="col-sm-2 control-label">Add Product</label>

                  <div class="col-sm-10">
					<select name="product" class="form-control" id="AddDomProduct">
                    </select>
                  </div>
                </div>
				<hr />
				<div id="Products"></div>
				<hr />
				<br />
                <div class="form-group">
                  <label for="Discount" class="col-sm-2 control-label">Discount</label>

                  <div class="col-sm-10">
                    <input type="text" value="0" autocomplete="off" name="disc" class="form-control" id="Discount" placeholder="Discount">
                  </div>
                </div>
                <div class="form-group">
                  <label for="Discount" class="col-sm-2 control-label">Grand Total</label>

                  <div class="col-sm-10">
                    <input type="text" name="grandtotal" class="form-control" value="0" id="GrandTotal" placeholder="Grand Total" readonly>
                  </div>
                </div>
                <div class="form-group">
                  <label for="Description" class="col-sm-2 control-label">Description</label>

                  <div class="col-sm-10">
                    <textarea type="text" name="desc" class="form-control" id="Description" placeholder="Description"></textarea>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="button" onclick="javascript:history.go(-1);" class="btn btn-default">Cancel</button>
                &nbsp;
                <button type="submit" class="btn btn-info pull-right">Submit</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<script>
$( document ).ajaxComplete(function() {
	$('input[name="disc"]').bind('change keyup', function(){
		var gtotal = $('.totalpriceproduct').html();
		gtotal = gtotal.replace(/(IDR |\.|\,)/g, '');
		var disc = $(this).val();
		disc = disc.replace(/,/g, '');
		$('input[name="grandtotal"]').val(number_format(parseInt(gtotal)-parseInt(disc), 0, '.', ','));
	});
});
$(document).ready(function(){
	$("#addCustomer").fancybox({
		'width'				: '50%',
		'height'			: '50%',
		'autoScale'			: false,
		'transitionIn'		: 'none',
		'transitionOut'		: 'none',
		'type'				: 'iframe',
		  tpl : {
        closeBtn : '<a title="Close Add Customer" class="fancybox-item fancybox-close close-add-customer" href="javascript:;"></a>'
		},
	   afterClose : function(){
		   location.reload();
	   }
	});
	
	$("#AddProduct").fancybox({
		'width'				: '75%',
		'height'			: '100%',
		'autoScale'			: false,
		'transitionIn'		: 'none',
		'transitionOut'		: 'none',
		'type'				: 'iframe'
	});
	
	$.fancybox.originalClose = $.fancybox.close;
	
	$('#Customer').change(function(){
        var element = $(this).find('option:selected');
        var buyerType = element.attr("ctype");
        if (buyerType == 0) {
			$('div#Products').load('{{ __site_url "order/order_products?ctype=0" }}');
			
			$('a#fancybox-close').click(function(){
				$('div#Products').load('{{ __site_url "order/order_products?ctype=0" }}');
			});
			
			$.fancybox.close = function() {
				$('div#Products').load('{{ __site_url "order/order_products?ctype=0" }}');
				$.fancybox.originalClose();
			}
		}
        else {
	
			$('div#Products').load('{{ __site_url "order/order_products?ctype=1" }}');
			
			$('a#fancybox-close').click(function(){
				$('div#Products').load('{{ __site_url "order/order_products?ctype=1" }}');
			});
			
			$.fancybox.close = function() {
				$('div#Products').load('{{ __site_url "order/order_products?ctype=1" }}');
				$.fancybox.originalClose();
			}
		}
	});
	$('#Customer').change();
	$('#Customer').selectAjax("/ajax/customers/",0);
	
	$('#AddDomProduct').selectAjax("/ajax/products/",0);
	
	$('#AddDomProduct').change(function(){
		var productId = $(this).val();
			pid = [];
			pid[0] = productId;
			
		$.post( "/order/order_products_add", { pid: pid,type:1 }).done(function( data ) {
			if (data.status == -1) {
				var res = '<tr class="listproducts" idnya="'+pid+'">';
					res += '<input type="hidden" name="ppricepcs['+pid+']" value="'+data.product[0].ppricepcs+'">';
					res += '<input type="hidden" name="ppricedozen['+pid+']" value="'+data.product[0].ppricedozen+'">';
					res += '<input type="hidden" name="ppricekoli['+pid+']" value="'+data.product[0].ppricekoli+'">';
					res += '<input type="hidden" name="base_ppricepcs['+pid+']" value="'+data.product[0].ppricebasepcs+'">';
					res += '<input type="hidden" name="base_ppricedozen['+pid+']" value="'+data.product[0].ppricebasedozen+'">';
					res += '<input type="hidden" name="base_ppricekoli['+pid+']" value="'+data.product[0].ppricebasekoli+'">';
					res += '<td>'+data.product[0].pname+'</td>';
					res += '<td class="ppricepcs hide" data-ppricepcs="'+data.product[0].ppricepcs+'">'+number_format(data.product[0].ppricepcs, 0, '', ',')+'</td>';
					res += '<td class="ppricedozen hide" data-ppricedozen="'+data.product[0].ppricedozen+'">'+number_format(data.product[0].ppricedozen, 0, '', ',')+'</td>';
					res += '<td class="ppricekoli hide" data-ppricekoli="'+data.product[0].ppricekoli+'">'+number_format(data.product[0].ppricekoli, 0, '', ',')+'</td>';
					res += '<td class="pqty"><input type="number" value="1" name="products['+pid+']" class="form-control" style="width:100px;"></td>';
					res += '<td><select name="optype['+pid+']" data-pid="'+pid+'" class="optype form-control">{{{ __order_product_type ttype 2 }}}</select></td>';
					res += '<td style="text-align:center;">';
					res += '<a href="javascript:void(0);" id="dellist" idnya="'+pid+'"><i class="fa fa-times"></i></a>';
					res += '</td>';
					res += '</tr>';
				$('div#Products > table > tbody').append(res);
			}
			

			$('select.optype').change(function(){
				var pid = $(this).attr('data-pid');
				var totalprice = 0;
				var price = 0;
				var qty = 0;
				$('tr.listproducts').each(function(){
					var rpid = $(this).attr('idnya');
					if (rpid != pid) {
						console.log(rpid);
						if ($('select[name="optype['+rpid+']"] option:selected').val() == 1) {
							price = parseFloat($('td.ppricedozen', $(this)).attr('data-ppricedozen'));
							qty = parseInt($('td.pqty > input', $(this)).val());
							totalprice += price * qty;
						}
						else if ($('select[name="optype['+rpid+']"] option:selected').val() == 2) {
							price = parseFloat($('td.ppricekoli', $(this)).attr('data-ppricekoli'));
							qty = parseInt($('td.pqty > input', $(this)).val());
							totalprice += price * qty;
						}
						else {
							price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
							qty = parseInt($('td.pqty > input', $(this)).val());
							totalprice += price * qty;
						}
					}
				});
				
				if ($(this).val() == 1) {
					price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricedozen').attr('data-ppricedozen'));
					qty = parseInt($('tr[idnya="'+pid+'"] > td.pqty > input').val());
					totalprice += price * qty;
				}
				else if ($(this).val() == 2) {
					price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricekoli').attr('data-ppricekoli'));
					qty = parseInt($('tr[idnya="'+pid+'"] > td.pqty > input').val());
					totalprice += price * qty;
				}
				else {
					price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricepcs').attr('data-ppricepcs'));
					qty = parseInt($('tr[idnya="'+pid+'"] > td.pqty > input').val());
					totalprice += price * qty;
				}
				$('.totalpriceproduct').html(number_format(totalprice, 0,'',','));
				$('input[name="grandtotal"]').val(number_format(totalprice, 0,'',','));
			});

			$('input[type="number"]').bind('change click keypress keyup',function(){
				var totalqty = 0;
				$('input[type="number"]').each(function(index){
					totalqty += ($(this).val() == '' ? 0 : parseInt($(this).val()));
				})
				$('.totalqtyproduct').html(totalqty);
				
				var totalprice = 0;
				var price = 0;
				var qty = 0;
				$('tr.listproducts').each(function(){
					var rpid = $(this).attr('idnya');
					if ($('select[name="optype['+rpid+']"] option:selected').val() == 1) {
						price = parseFloat($('td.ppricedozen', $(this)).attr('data-ppricedozen'));
						qty = parseInt($('td.pqty > input', $(this)).val());
						totalprice += price * qty;
					}
					else if ($('select[name="optype['+rpid+']"] option:selected').val() == 2) {
						price = parseFloat($('td.ppricekoli', $(this)).attr('data-ppricekoli'));
						qty = parseInt($('td.pqty > input', $(this)).val());
						totalprice += price * qty;
					}
					else {
						price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
						qty = parseInt($('td.pqty > input', $(this)).val());
						if (qty > 2) {
							price = parseFloat($('td.ppricedozen', $(this)).attr('data-ppricedozen')) / 12;
						}
						totalprice += price * qty;
					}
				});
				$('.totalpriceproduct').html(number_format(totalprice, 0,'',','));
				$('input[name="grandtotal"]').val(number_format(totalprice, 0,'',','));
			});

			$('input[type="number"]').change();
		});
	});
});
</script>
