  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Purchase Order
        <small>New Purchase Order</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Purchase Order</a></li>
        <li class="active"><a href="#">New Purchase Order</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            {{{ error_msg }}}
            
           <div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">New Purchase Order</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal" action="{{ __site_url 'order/order_add' }}" method="post">
              <div class="box-body">
                <div class="form-group">
                  <label for="Customer" class="col-sm-2 control-label">Date</label>

                  <div class="col-sm-10">
                    <input type="text" name="waktu" class="form-control" id="DateTimePicker" placeholder="Date Order" value="{{ __get_date '' 2 }}">
                  </div>
                </div>
                <div class="form-group">
                  <label for="isRetail" class="col-sm-2 control-label">Retail</label>

                  <div class="col-sm-10">
					<div class="checkbox">
					{{{ __get_retail 1 2}}}
					</div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="NewCustomer" class="col-sm-2 control-label">New Customer</label>

                  <div class="col-sm-10">
					<div class="checkbox">
					Yes <input type="radio" value="1" name="newcust">
					No <input type="radio" value="0" name="newcust" checked>
					</div>
                  </div>
                </div>
				<div class="new-cust hide">
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                  <div class="col-sm-10">
                    <input type="text" name="nname" class="form-control" id="inputEmail3" placeholder="Customer Name" autocomplete="off">
                  </div>
                </div>
                <div class="form-group">
                  <label for="Phone" class="col-sm-2 control-label">Phone</label>
                  <div class="col-sm-5">
                    <input type="text" name="nphone1" class="form-control" id="Phone" placeholder="Phone I">
                  </div>
                  <div class="col-sm-5">
                    <input type="text" name="nphone2" class="form-control" id="Phone2" placeholder="Phone II">
                  </div>
                </div>
                <div class="form-group">
                  <label for="Email" class="col-sm-2 control-label">Email</label>
                  <div class="col-sm-10">
                    <input type="text" name="nemail" class="form-control" id="Email" placeholder="Email Customer">
                  </div>
                </div>
                </div>
				<div class="old-cust">
				<div class="form-group">
                  <label for="Customer" class="col-sm-2 control-label">Customer</label>

                  <div class="col-sm-10">
					<select name="customer" class="form-control" id="Customer">
                    </select>
                  </div>
                </div>
				<div class="old-cust-detail hide">
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                  <div class="col-sm-10">
                    <input type="text" name="oname" class="form-control" id="inputEmail3" placeholder="Customer Name" autocomplete="off">
                  </div>
                </div>
                <div class="form-group">
                  <label for="Phone" class="col-sm-2 control-label">Phone</label>
                  <div class="col-sm-5">
                    <input type="text" name="ophone1" class="form-control" id="Phone" placeholder="Phone I">
                  </div>
                  <div class="col-sm-5">
                    <input type="text" name="ophone2" class="form-control" id="Phone2" placeholder="Phone II">
                  </div>
                </div>
                <div class="form-group">
                  <label for="Email" class="col-sm-2 control-label">Email</label>
                  <div class="col-sm-10">
                    <input type="text" name="oemail" class="form-control" id="Email" placeholder="Email Customer">
                  </div>
                </div>
                </div>
                </div>
                <div class="form-group hide">
                  <label for="inputPassword3" class="col-sm-2 control-label">Status</label>

                  <div class="col-sm-10">
                    <div class="checkbox">
					  {{{ __get_status 1 2 }}}
                  </div>
                  </div>
                </div>

				<hr />
                <div class="form-group">
                  <label for="Customer" class="col-sm-2 control-label">Add Product</label>

                  <div class="col-sm-10">
					<select name="product" class="form-control" id="AddDomProduct">
                    </select>
                  </div>
                </div>
				<hr />
				<div id="Products"></div>
				<hr />
				<br />
                <div class="form-group">
                  <label for="Discount" class="col-sm-2 control-label">Discount</label>

                  <div class="col-sm-10">
                    <input type="text" value="0" onkeyup="formatharga(this.value,this)" autocomplete="off" name="disc" class="form-control" id="Discount" placeholder="Discount">
                  </div>
                </div>
                <div class="form-group">
                  <label for="Discount" class="col-sm-2 control-label">Grand Total</label>

                  <div class="col-sm-10">
                    <input type="text" name="grandtotal" class="form-control" value="0" id="GrandTotal" placeholder="Grand Total" readonly>
                  </div>
                </div>
                <div class="form-group">
                  <label for="Description" class="col-sm-2 control-label">Description</label>

                  <div class="col-sm-10">
                    <textarea type="text" name="desc" class="form-control" id="Description" placeholder="Description"></textarea>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="button" onclick="javascript:history.go(-1);" class="btn btn-default">Cancel</button>
                &nbsp;
                <button type="submit" class="btn btn-info pull-right">Submit</button>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<script>
$( document ).ajaxComplete(function() {
	$('input[name="disc"]').bind('change keyup', function(){
		var gtotal = $('.totalpriceproduct').html();
		gtotal = gtotal.replace(/(IDR |\.|\,)/g, '');
		var disc = $(this).val();
		disc = disc.replace(/,/g, '');
		$('input[name="grandtotal"]').val(number_format(parseInt(gtotal)-parseInt(disc), 0, '.', ','));
	});
});
$(document).ready(function(){
	$('input[name="newcust"]').click(function(){
		if ($(this).val() == 1) {
			$('.new-cust').removeClass('hide');
			$('.old-cust').addClass('hide');
			$('.old-cust-detail').addClass('hide');
		}
		else {
			$('.new-cust').addClass('hide');
			$('.old-cust').removeClass('hide');
		}
	});

	$("#addCustomer").fancybox({
		'width'				: '50%',
		'height'			: '50%',
		'autoScale'			: false,
		'transitionIn'		: 'none',
		'transitionOut'		: 'none',
		'type'				: 'iframe',
		  tpl : {
        closeBtn : '<a title="Close Add Customer" class="fancybox-item fancybox-close close-add-customer" href="javascript:;"></a>'
		},
	   afterClose : function(){
		   location.reload();
	   }
	});
	
	$("#AddProduct").fancybox({
		'width'				: '75%',
		'height'			: '100%',
		'autoScale'			: false,
		'transitionIn'		: 'none',
		'transitionOut'		: 'none',
		'type'				: 'iframe'
	});
	
	$.fancybox.originalClose = $.fancybox.close;
	
	$('#Customer').change(function(){
        var element = $(this).find('option:selected');
        var buyerType = element.attr("ctype");
		var idnya = parseInt(element.val());
		if (idnya > 0) {
			$.get( '{{ __site_url "ajax/customers_detail/" }}'+idnya).done(function( data ) {
				var phone = data.data[0].cphone;
				var phones = phone.split('*');
				
				$('input[name="oemail"]').val(data.data[0].cemail);
				$('input[name="oname"]').val(data.data[0].cname);
				$('input[name="ophone1"]').val(phones[0]);
				$('input[name="ophone2"]').val(phones[1]);
				$('.old-cust-detail').removeClass('hide');
				$('.old-cust-detail').show();
			});
		}	
        if (buyerType == 0) {
			$('div#Products').load('{{ __site_url "order/order_products?ctype=0" }}');
			
			$('a#fancybox-close').click(function(){
				$('div#Products').load('{{ __site_url "order/order_products?ctype=0" }}');
			});
			
			$.fancybox.close = function() {
				$('div#Products').load('{{ __site_url "order/order_products?ctype=0" }}');
				$.fancybox.originalClose();
			}
		}
        else {
			$('div#Products').load('{{ __site_url "order/order_products?ctype=1" }}');
			
			$('a#fancybox-close').click(function(){
				$('div#Products').load('{{ __site_url "order/order_products?ctype=1" }}');
			});
			
			$.fancybox.close = function() {
				$('div#Products').load('{{ __site_url "order/order_products?ctype=1" }}');
				$.fancybox.originalClose();
			}
		}
	});
	$('#Customer').change();
	$('#Customer').selectAjax("/ajax/customers/",0);
	
	$('#AddDomProduct').selectAjax("/ajax/products/",0);
	
	$('#AddDomProduct').change(function(){
		var productId = $(this).val();
			pid = [];
			pid[0] = productId;
			
		$.post( "/order/order_products_add", { pid: pid,type:1 }).done(function( data ) {
			if (data.status == -1) {
				$('div#Products').load('{{ __site_url "order/order_products?ctype=1" }}');
			}
			
			var isRetail = $('input[name="retail"]:checked').val();

			$('select.optype').change(function(){
				var pid = $(this).attr('data-pid');
				var totalprice = 0;
				var price = 0;
				var qty = 0;
				$('tr.listproducts').each(function(){
					var rpid = $(this).attr('idnya');
					if (rpid != pid) {
						if ($('select[name="optype['+rpid+']"] option:selected').val() == 1) {
							price = parseFloat($('td.ppricedozen', $(this)).attr('data-ppricedozen'));
							if (!price) price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
							qty = parseInt($('td.pqty > input', $(this)).val());
							totalprice += price * qty;
						}
						else if ($('select[name="optype['+rpid+']"] option:selected').val() == 2) {
							price = parseFloat($('td.ppricekoli', $(this)).attr('data-ppricekoli'));
							if (!price) price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
							qty = parseInt($('td.pqty > input', $(this)).val());
							totalprice += price * qty;
						}
						else {
							price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
							if (isRetail == 1) {
								price = parseFloat($('td.ppricedozen', $(this)).attr('data-ppricedozen')) / 12;
								if (!price) price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
							}
							qty = parseInt($('td.pqty > input', $(this)).val());
							totalprice += price * qty;
						}
					}
				});
				
				if ($(this).val() == 1) {
					price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricedozen').attr('data-ppricedozen'));
					if (!price) price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricepcs').attr('data-ppricepcs'));
					qty = parseInt($('tr[idnya="'+pid+'"] > td.pqty > input').val());
					totalprice += price * qty;
				}
				else if ($(this).val() == 2) {
					price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricekoli').attr('data-ppricekoli'));
					if (!price) price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricepcs').attr('data-ppricepcs'));
					qty = parseInt($('tr[idnya="'+pid+'"] > td.pqty > input').val());
					totalprice += price * qty;
				}
				else {
					price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricepcs').attr('data-ppricepcs'));
					if (isRetail == 1) {
						price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricedozen').attr('data-ppricedozen')) / 12;
						if (!price) price = parseFloat($('tr[idnya="'+pid+'"] > td.ppricepcs').attr('data-ppricepcs'));
					}
					qty = parseInt($('tr[idnya="'+pid+'"] > td.pqty > input').val());
					totalprice += price * qty;
				}
				$('.totalpriceproduct').html(number_format(totalprice, 0,'',','));
				$('input[name="grandtotal"]').val(number_format(totalprice, 0,'',','));
			});

			$('input[type="number"]').bind('change click keypress keyup',function(){
				var totalqty = 0;
				$('input[type="number"]').each(function(index){
					totalqty += ($(this).val() == '' ? 0 : parseInt($(this).val()));
				})
				$('.totalqtyproduct').html(totalqty);
				
				var totalprice = 0;
				var price = 0;
				var qty = 0;
				$('tr.listproducts').each(function(){
					var rpid = $(this).attr('idnya');
					if ($('select[name="optype['+rpid+']"] option:selected').val() == 1) {
						price = parseFloat($('td.ppricedozen', $(this)).attr('data-ppricedozen'));
						if (!price) price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
						qty = parseInt($('td.pqty > input', $(this)).val());
						totalprice += price * qty;
					}
					else if ($('select[name="optype['+rpid+']"] option:selected').val() == 2) {
						price = parseFloat($('td.ppricekoli', $(this)).attr('data-ppricekoli'));
						if (!price) price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
						qty = parseInt($('td.pqty > input', $(this)).val());
						totalprice += price * qty;
					}
					else {
						price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
						qty = parseInt($('td.pqty > input', $(this)).val());
						if (isRetail == 1) {
							price = parseFloat($('td.ppricedozen', $(this)).attr('data-ppricedozen')) / 12;
							if (!price) price = parseFloat($('td.ppricepcs', $(this)).attr('data-ppricepcs'));
						}
						totalprice += price * qty;
					}
					$('input[name="pricew['+rpid+']"]').val(number_format(price * qty));
				});
				$('.totalpriceproduct').html(number_format(totalprice, 0,'',','));
				$('input[name="grandtotal"]').val(number_format(totalprice, 0,'',','));
			});

			$('input[type="number"]').change();
		});
	});
});
</script>
