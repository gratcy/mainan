  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Users
        <small>Users</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><a href="#">Users</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Users</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            {{{ error_msg }}}
            
            <div class="box-header">
			{{#if (__check_permission 'UserExecute') }}
		    <h3 class="box-title">
			<a href="{{ __site_url 'users/users_add' }}" class="btn btn-default"><i class="fa fa-plus"></i> Add User</a>
			</h3>
            {{/if}}
            </div>
              <table id="sTable" class="table table-bordered table-striped">
                <thead>
                <tr>
          <th>Group</th>
          <th>Email</th>
          <th>Full Name</th>
          <th>History IP Address</th>
          <th>History Date</th>
          <th>Status</th>
          <th>Action</th>
                </tr>
                </thead>
                <tbody>
				{{#each data}}
		  <tr>
          <td>{{ gname }}</td>
          <td>{{ uemail }}</td>
          <td>{{ unick }}</td>
          <td>{{ __explode_string ulastlogin '*' 0 }}</td>
          <td>{{ __get_date (__explode_string ulastlogin '*' 1) 1 }}</td>
		  <td>{{ __get_status ustatus 1 }}</td>
											<td>
			{{#compare uid 1 operator="!="}}
			{{#if (__check_permission 'UserExecute') }}
              <a href="{{ __site_url 'users/users_update/' }}{{ uid }}"><i class="fa fa-pencil"></i></a>
              <a href="{{ __site_url 'users/users_delete/' }}{{ uid }}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-times"></i></a>
              {{/if}}
		  {{/compare}}
		</td>
										</tr>
                {{/each}}
                </tbody>
                <tfoot>
                <tr>
          <th>Group</th>
          <th>Email</th>
          <th>Full Name</th>
          <th>History IP Address</th>
          <th>History Date</th>
          <th>Status</th>
          <th>Action</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
